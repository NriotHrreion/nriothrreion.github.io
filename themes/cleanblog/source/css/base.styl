@import "variables.styl"
@import "mixins.styl"

body
  @extend .serif
  font-size 20px
  color gray-dark

body *
  box-sizing border-box

p
  line-height 1.5
  margin 30px 0

table
  display block
  margin-top 32px
  width 100%
  overflow auto
  border-spacing 0
  border-collapse collapse
  font-size 16px
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji
  tr
    background-color #fff
    border-top 1px solid #c6cbd1
    &:nth-child(2n)
      background-color #f6f8fa
  th
    font-weight 600
  td, th
    padding 6px 13px
    border 1px solid #dfe2e5
  a
    color #0366d6
    text-decoration none
    background-color initial
    &:hover
      color #0366d6
      text-decoration underline

p, li
  a
    text-decoration underline

h1, h2, h3, h4, h5, h6
  @extend .sans-serif
  font-weight 800

a
  color gray-dark
  &:hover, &:focus
    color brand-primary
a img
  &:hover, &:focus
    cursor zoom-in

hr.small
  max-width 100px
  margin 15px auto
  border-width 2px
  border-color white

.fa-stack-1x, .fa-stack-2x
  bottom 0

.article-tags
  border-bottom 1px dotted #ababab
  text-transform uppercase
  font-style normal
  font-size 15px
  &:hover
    border-bottom 0
    color #000
    text-decoration none

#local-search-input
  width 200px
  height 35px
  background-color #e0e0e0
  border-radius 5px
  border transparent solid
  padding 7px
  font-size 11pt
  position absolute
  right 170px
  &:focus
    outline none

